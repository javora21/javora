@model javora.Models.View.NewsModel

    <div class="news-container">
        <div class="news-header">
            <img src="../@Model.MainImagePath" alt="">
            <div class="news-title">
                <h2>@Model.Title</h2>
                <p>@Model.Description</p>
            </div>
        </div>
        <div class="content-area">
            @Html.Raw(Model.Content)
        </div>
    </div>
<style>
    .news-container{
    padding:15px;
    }
    .news-header{
        text-align:center
    }
    .news-header>img{
        max-height:450px;
    }
    .news-title{
        position: relative;
        width:100%;
        height:100px;
        margin-top:-100px;
	    padding: 10px 15px 5px;
	    background: rgba(0, 0, 0, 0.75);
        opacity:0.85;
    }
    .news-title>h2, .news-title>p {
        color:white
    }
    .content-area{
        margin:20px;
    }
</style>