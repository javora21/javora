@model IEnumerable<javora.Models.View.DocumentModel>

@{
    ViewData["Title"] = "DocumentAdminList";
}

<div class="content">
    <a href="@Url.Action("AddNews")" class="btn btn-success" style="margin-bottom:10px">Додати новину</a>
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Назва Файлу
                </th>
                <th>
                    Формат
                </th>
                <th>
                    URL ID
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Extension
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @*<a href="@Url.Action("EditNews",new { guid = item.Guid})" class="btn btn-primary">Відкрити</a>
                        <a href="@Url.Action("EditNews",new { guid = item.Guid})" class="btn btn-primary">Редагувати</a>
                        <a href="@Url.Action("DeleteNews",new { guid = item.Guid}))" class="btn btn-danger">Видалити</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
